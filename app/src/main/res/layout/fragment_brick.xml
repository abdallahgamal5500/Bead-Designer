<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FragmentBrick"
    android:forceDarkAllowed="false"
    android:background="@color/black">

    <include
        layout="@layout/toolbar"
        android:id="@+id/brick_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/brick_cardview">

        <LinearLayout
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:id="@+id/brick_tools_layout">

            <include
                layout="@layout/tools"
                android:id="@+id/brick_tools"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/brick_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/brick_scroll">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                layout="@layout/item_brick"
                android:id="@+id/brick_items"/>
        </HorizontalScrollView>
    </ScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/SpinKitView.FadingCircle"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorAccent"
        android:visibility="invisible"
        android:id="@+id/brick_progress"/>

</androidx.constraintlayout.widget.ConstraintLayout>